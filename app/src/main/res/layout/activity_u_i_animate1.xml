<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.ui.animation.UIAnimate1Activity">
<!--    <?xml version="1.0" encoding="utf-8"?>-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_start_animation"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/animation_view"
            android:layout_marginBottom="40dp"
            android:text="开始动画"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/bg_view"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@id/animation_view"
            android:layout_alignLeft="@id/animation_view"
            android:gravity="center"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/animation_view"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:text="Hello World!"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@color/colorAccent"/>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>