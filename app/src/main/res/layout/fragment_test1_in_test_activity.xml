<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.ui.layout_test_1.Test1Fragment">

    android:id="@+id/wrongbook_content"
    android:layout_width="match_parent"
    android:visibility="visible"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/custom_padding_value_1"
            android:paddingRight="@dimen/custom_padding_value_1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="错题归纳" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/look_demo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="20dp"
                android:textColorHighlight="@color/colorAccent"
                android:text="查看范例" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/input_panel_1"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:layout_height="300dp"
            android:background="@drawable/layout_test_corner"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:paddingLeft="@dimen/custom_padding_value_1"
            android:textStyle="bold"
            android:text="错题疑惑" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/input_panel_2"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/custom_padding_value_1"
            android:background="@drawable/layout_test_corner"
            android:layout_height="300dp" />

    </LinearLayout>

</FrameLayout>
